{
  "name": "ts_chat",
  "version": "1.0.0",
  "description": "Simple chat using Express, Socket.io, and TypeScript (MVC)",
  "main": "dist/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "tunnel": "node tunnel.js",
    "_tunnel_alt": "node -e \"require('dotenv').config(); require('child_process').execSync(`ngrok http ${process.env.PORT} --authtoken ${process.env.NGROK_AUTHTOKEN}`, { stdio: 'inherit' });\"",
    "dev:tunnel": "concurrently \"npm run dev\" \"npm run tunnel\""
  },
  "keywords": [
    "chat",
    "express",
    "socket.io",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "express": "^5.1.0",
    "fs": "^0.0.1-security",
    "ngrok": "^5.0.0-beta.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
